---
import Links from "../data/Links";
import Menu from "../icons/Menu";
const location = new URL(Astro.request.url).pathname;
---

<div>
  <button>
    <Menu className="w-10 h-10 md:hidden" />
  </button>
  <div class="hidden md:flex md:gap-7">
    {
      Links.map(({ label, link }) => (
        <a
          href={link}
          class={`first-letter:uppercase py-2 text-xl ${
            location === link
              ? "font-extrabold underline underline-offset-4 decoration-2 "
              : "font-semibold"
          }`}
        >
          {label}
        </a>
      ))
    }
  </div>
</div>
