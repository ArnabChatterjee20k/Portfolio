---
import ProjectCards from "./ProjectCards.astro";
import { type CollectionEntry } from "astro:content";
interface Props {
  works:CollectionEntry<"work">[]
}

const {works} = Astro.props
---

<div class="flex flex-col gap-5 md:flex-row px-2">
  {works.slice(0,3).map(work=><ProjectCards work={work}/>)}
</div>
