---
import { Cards, CardsTitle, CardsDescription } from "../Cards";
import Vectorgithub from "../../icons/Vectorgithub";
import Vectorliveurl from "../../icons/Vectorliveurl";
import Link from "../Link";
import { type CollectionEntry } from "astro:content";

interface Props {
  work: CollectionEntry<"work">;
}

const { work } = Astro.props;
const {
  slug,
  data: { title, tags, description, githublink, image, liveurl },
} = work;
---

<Cards>
  <CardsTitle>{title}</CardsTitle>
  <div class="md:max-h-[14rem] text-ellipsis">
    <CardsDescription>
      {description}
    </CardsDescription>
  </div>

  <div class="flex items-center justify-between">
    <div class="flex gap-5 md:gap-2">
      {
        githublink && (
          <a href={githublink}>
            <Vectorgithub className="h-8 w-8 md:h-4 md:w-4 fill-black dark:fill-white" />
          </a>
        )
      }
      {
        liveurl && (
          <a href={liveurl}>
            <Vectorliveurl className="h-8 w-8 md:h-4 md:w-4 fill-black dark:fill-white" />
          </a>
        )
      }
    </div>
    <Link
      href={`/works/${slug}`}
      className="flex justify-between text-xl md:text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-700 gap-1"
      svgClassName="fill-blue-600 w-5 h-4 md:w-3 md:h-2"
      text="Read More"
    />
  </div>
</Cards>
